# Application Configuration
ENVIRONMENT=development
DEBUG=true

# PostgreSQL
POSTGRES_USER=agricole_user
POSTGRES_PASSWORD=agricole_secure_password_2025
POSTGRES_HOST=postgres
POSTGRES_PORT=5434
AUTO_CREATE_DB=true

# RabbitMQ
RABBITMQ_DEFAULT_USER=agricole_rabbit
RABBITMQ_DEFAULT_PASS=rabbit_secure_password_2025
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# Redis
REDIS_HOST=redis
REDIS_PORT=6380
REDIS_PASSWORD=redis_secure_password_2025

# MinIO (S3 compatible storage)
MINIO_ROOT_USER=minio_admin
MINIO_ROOT_PASSWORD=minio_secure_password_2025
MINIO_ACCESS_KEY=minio_admin
MINIO_SECRET_KEY=minio_secure_password_2025
MINIO_HOST=minio
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Default admin (identity service)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=Admin@2025
ADMIN_EMAIL=admin@agricole.com
ADMIN_FULL_NAME=Administrateur Systeme

# API Gateway
GATEWAY_PORT=80
GATEWAY_HTTPS_PORT=443

# Service Ports
IDENTITY_SERVICE_PORT=8001
FARM_SERVICE_PORT=8002
INVENTORY_SERVICE_PORT=8003
SALES_SERVICE_PORT=8004
ACCOUNTING_SERVICE_PORT=8005
REPORTING_SERVICE_PORT=8006
BFF_MOBILE_PORT=8010
BFF_WEB_PORT=8011

# TVA Configuration
TVA_RATE=19.25

# Observability
ENABLE_TELEMETRY=true
JAEGER_HOST=jaeger
JAEGER_PORT=6831

# Public access (set YOUR_PUBLIC_IP on the server)
NEXT_PUBLIC_API_URL=http://localhost
NEXT_PUBLIC_IDENTITY_API_URL=http://localhost:8001
NEXT_PUBLIC_FARM_API_URL=http://localhost:8002
NEXT_PUBLIC_INVENTORY_API_URL=http://localhost:8003
NEXT_PUBLIC_SALES_API_URL=http://localhost:8004
NEXT_PUBLIC_ACCOUNTING_API_URL=http://localhost:8005
NEXT_PUBLIC_REPORTING_API_URL=http://localhost:8006
