# Application Configuration
ENVIRONMENT=development
DEBUG=true

# PostgreSQL
POSTGRES_USER=agricole_user
POSTGRES_PASSWORD=agricole_secure_password_2025
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# RabbitMQ
RABBITMQ_DEFAULT_USER=agricole_rabbit
RABBITMQ_DEFAULT_PASS=rabbit_secure_password_2025
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_secure_password_2025

# MinIO (S3 compatible storage)
MINIO_ROOT_USER=minio_admin
MINIO_ROOT_PASSWORD=minio_secure_password_2025
MINIO_HOST=minio
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# API Gateway
GATEWAY_PORT=80
GATEWAY_HTTPS_PORT=443

# Service Ports
IDENTITY_SERVICE_PORT=8001
FARM_SERVICE_PORT=8002
INVENTORY_SERVICE_PORT=8003
SALES_SERVICE_PORT=8004
ACCOUNTING_SERVICE_PORT=8005
REPORTING_SERVICE_PORT=8006
BFF_MOBILE_PORT=8010
BFF_WEB_PORT=8011

# TVA Configuration
TVA_RATE=19.25

# Observability
ENABLE_TELEMETRY=true
JAEGER_HOST=jaeger
JAEGER_PORT=6831
